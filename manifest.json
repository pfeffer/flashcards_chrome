{
  "manifest_version": 2,

  "name": "Flash Cards",
  "description": "Helps your memory",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "click to save selected text"
  },
