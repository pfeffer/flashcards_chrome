  //     // "js": ["jquery-2.0.2.min.js", "content.js"]
  //     "js": ["content.js"]
  //   }
  // ],
  "background": {
    "scripts": ["jquery-2.0.2.min.js", "background.js"],
    //"scripts": ["background.js"],
    "persistent": false
  }
}
